<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- Osho Discourse Player Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/player_background"
        android:padding="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Osho Discourses"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/selectOshoFolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Osho Folder"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/oshoCurrentTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No track selected"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:singleLine="true"
            android:ellipsize="marquee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <ImageButton
                android:id="@+id/oshoPrevious"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_media_previous"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/oshoPlayPause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_media_play"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/oshoNext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_media_next"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/oshoSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <ListView
            android:id="@+id/oshoListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:divider="#ddd"
            android:dividerHeight="1dp" />

    </LinearLayout>

    <!-- Music Player Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/player_background"
        android:padding="12dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Background Music"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/selectMusicFolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Music Folder"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/musicCurrentTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No track selected"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:singleLine="true"
            android:ellipsize="marquee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <ImageButton
                android:id="@+id/musicPrevious"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_media_previous"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/musicPlayPause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_media_play"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/musicNext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_media_next"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/musicSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <ListView
            android:id="@+id/musicListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:divider="#ddd"
            android:dividerHeight="1dp" />

    </LinearLayout>

</LinearLayout>
